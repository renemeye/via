<p id="notice"><%= notice %></p>

<h1>Public Transit Stations</h1>

<table>
  <thead>
    <tr>
      <th>Dhid</th>
      <th>Dtzid</th>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @public_transit_stations.each do |public_transit_station| %>
      <tr>
        <td><%= public_transit_station.dhid %></td>
        <td><%= public_transit_station.dtzid %></td>
        <td><%= public_transit_station.name %></td>
        <td><%= public_transit_station.latitude %></td>
        <td><%= public_transit_station.longitude %></td>
        <td><%= link_to 'Show', public_transit_station %></td>
        <td><%= link_to 'Edit', edit_public_transit_station_path(public_transit_station) %></td>
        <td><%= link_to 'Destroy', public_transit_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

